<ui:composition template="/templates/MasterLayout.xhtml"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core">
	
	<ui:define name="css">
	 	<style type="text/css">
            .errorRow {
                background-color: #6CE26C !important;
                color: red !important;
            }
            
            .companyHeaderGrid tr, .companyHeaderGrid td {
    border-style: hidden !important;
}
        </style> 
	</ui:define>
	
	<ui:define name="content">
	
	<p:ajaxStatus onstart="start();" onsuccess="stop();" onerror="stopWithError();"/>
	
	<h:form id="form" enctype="multipart/form-data">
		<p:messages id="msgId" escape="false" closable="true" autoUpdate="true"/>
		<p:panel header="#{dbResource['wq.label.exCurrencySetting']}" style="font-size:12pt">
			<p:panelGrid styleClass="companyHeaderGrid">
				<p:row>
					<p:column style="text-align: right">
						<h:outputText value="#{dbResource['wq.label.deExchangeCurrency']} " />
					</p:column>
					<p:column>
					<h:selectOneMenu id="exChange_Currency" value="#{exchangeCurrencyMB.defaultCurrency.currency}">							
		                      <f:selectItems value="#{exchangeCurrencyMB.exCurrencyList}" />
					</h:selectOneMenu>
					</p:column>
					<p:column>
						<p:commandButton value="#{dbResource['wq.button.submit']}" action="#{exchangeCurrencyMB.updateDefaultCurrency}" ajax="false"/>
	        		</p:column>
				</p:row>
			</p:panelGrid>
			
		</p:panel>
	
	</h:form>
		
		
	</ui:define>
</ui:composition>
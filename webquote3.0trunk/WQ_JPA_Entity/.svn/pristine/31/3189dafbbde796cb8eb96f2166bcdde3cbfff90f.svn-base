			pimv.setDisplayOnTop(pi.getMaterial().getDisplayOnTop());
			// pimv.setMinimumCost(pi.getProgramMinimumCost());
			// for defect 378
			pimv.setMinimumCost(pi.getCost());
			pimv.setMov(pi.getMov());

			pimv.setAvnetQuoteCentreComments(pi.getAvnetQcComments());
			pimv.setLastUpdate(DateUtils.formatDatetime(pi.getLastUpdatedOn()));

			if (pi.getLastUpdatedBy() != null)
				pimv.setLastUpdateBy(pi.getLastUpdatedBy());
			pimv.setCreatedOn(DateUtils.formatDatetime(pi.getCreatedOn()));
			if (pi.getCreatedBy() != null)
				pimv.setCreatedBy(pi.getCreatedBy());

			if (pi.getShipmentValidity() != null)
				pimv.setValidity(DateUtils.formatDate(pi.getShipmentValidity()));

			if (pi.getShipmentValidity() != null)
				pimv.setShipmentValidity(DateUtils.formatDate(pi.getShipmentValidity()));
			if (pi instanceof ProgramPricer) {
				ProgramPricer programPricer = (ProgramPricer) pi;
				pimv.setAllocation(booleanToString(programPricer.getAllocationFlag()));
				pimv.setProgram(programPricer.getProgramType().getName());
				pimv.setAvailableToSellQuantity(programPricer.getProgramAvailableToSellQty());
				// icon columns
				pimv.setSpecialItemIndicator(programPricer.getSpecialItemFlag());
				pimv.setCallForQuote(booleanToString(programPricer.getProgramCallForQuote()));

				if (pi.getCostIndicator() != null)
					pimv.setCostIndicator(pi.getCostIndicator().getName());
				pimv.setProgramEffectiveDate(DateUtils.formatDate(programPricer.getProgramEffectiveDate()));
				pimv.setProgramClosingDate(DateUtils.formatDate(programPricer.getProgramClosingDate()));
				pimv.setQuantityIndicator(programPricer.getQtyIndicator());
				pimv.setAllocationFlag(booleanToString(programPricer.getAllocationFlag()));
				pimv.setNewItemIndicator(booleanToString(programPricer.getNewProgramMaterialIndicator()));
				pimv.setResaleIndicator(programPricer.getResaleIndicator());
				pimv.setAqFlag(booleanToString(programPricer.getProgramAqFlag()));
				pimv.setSalesCostPart("No");
				List<QuantityBreakPrice> pricesList = programPricer.getQuantityBreakPrices();
				if (null != pricesList) {
					pimv = setVoWithPrice(pimv, pricesList);
				}
			} else if (pi instanceof SalesCostPricer) {
				SalesCostPricer sPricer = (SalesCostPricer) pi;
				pimv.setAllocation(booleanToString(sPricer.getAllocationFlag()));
				pimv.setProgram(sPricer.getProgramType().getName());
				pimv.setAvailableToSellQuantity(sPricer.getAvailableToSellQty());
				// icon columns
				pimv.setSpecialItemIndicator(sPricer.getSpecialItemFlag());
				if (pi.getCostIndicator() != null)
					pimv.setCostIndicator(pi.getCostIndicator().getName());
				pimv.setQuantityIndicator(sPricer.getQtyIndicator());
				pimv.setAllocationFlag(booleanToString(sPricer.getAllocationFlag()));
				pimv.setNewItemIndicator(booleanToString(sPricer.getNewItemIndicator()));
				pimv.setAqFlag(booleanToString(sPricer.getAqFlag()));
				pimv.setSalesCostPart("Yes");
				List<QuantityBreakPrice> pricesList = sPricer.getQuantityBreakPrices();
				if (null != pricesList) {
					pimv = setVoWithPrice(pimv, pricesList);
				}
			}

			piVoList.add(pimv);

		}
		return piVoList;
	}

	public static String tranferValidityToQED(String validity) {
		String qed = null;
		if (validity != null) {
			if (DateUtils.isDate(validity)) {
				qed = DateUtils.addDay(validity, -1);
			} else {
				if (StringUtils.isNumeric(validity)) {
					qed = String
							.valueOf(Integer.valueOf(validity).intValue() - 1);
				}
			}
		}
		return qed;
	}

	public static String booleanToString(Boolean booValue) {
		if (booValue == null || !booValue)
			return "N";
		else
			return "Y";
	}

